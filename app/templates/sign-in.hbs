<form {{action 'authenticate' on='submit'}}>
  <label for="identification">Email</label>
  {{input value=identification placeholder='Enter Email'}}
  <label for="password">Password</label>
  {{input value=password placeholder='Enter Password' type='password'}}
  <button type="submit">Login</button>
</form>

<div>
  Don't have an account? {{#link-to 'sign-up'}} Create One {{/link-to}}
</div>
