<div class="container">
  <div class="row">
    <div class="col-xs-12">
      User's Teams Page
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      {{#link-to 'teams.create' tagName='button' class="btn btn-main"}}
        New Team
      {{/link-to}}
      {{#each model as |team|}}
        <div>
          {{#link-to 'teams.show' team.id}}
            {{team.name}}
          {{/link-to}}
        </div>
      {{/each}}
    </div>

    <div class="col-md-9">
      {{outlet}}
    </div>
  </div>
</div>
